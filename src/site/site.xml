<?xml version="1.0" encoding="UTF-8"?>
<project name="Islandora EZID" xmlns="http://maven.apache.org/DECORATION/1.3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <bannerLeft>
        <name>Islandora EZID</name>
        <href>http://projects.freelibrary.info/islandora_ezid</href>
    </bannerLeft>

    <publishDate position="bottom" format="yyyy-MM-dd"/>
    <version position="bottom"/>
    <googleAnalyticsAccountId>${ga.accountId}</googleAnalyticsAccountId>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.0.0</version>
    </skin>

    <custom>
        <reflowSkin>
            <protocolRelativeURLs>true</protocolRelativeURLs>
            <smoothScroll>true</smoothScroll>
            <theme>site</theme>
            <brand>
                <name>FreeLibrary Projects</name>
                <href>http://freelibrary.info</href>
            </brand>
            <slogan>Providing support for Archival Resource Keys (ARKs) in the
                Drupal environment.</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>false</toc>
            <!-- top -->
            <tocTopMax>6</tocTopMax>
            <topNav>Read the Docs</topNav>
            <bottomNav maxSpan="16">
                <column>Project Links|Build Status</column>
                <column>Contributions|Donations</column>
                <column>Developer Reports</column>
                <column>reports|Maven Theme|Site Copyright</column>
            </bottomNav>
            <pages>
                <index project="islandora_ezid">
                    <titleTemplate>Islandora EZID Project</titleTemplate>
                    <breadcrumbs>false</breadcrumbs>
                    <toc>false</toc>
                    <markPageHeader>true</markPageHeader>
                    <sections>
                        <columns>2</columns>
                        <body/>
                    </sections>
                </index>
            </pages>
            <skinAttribution>false</skinAttribution>
        </reflowSkin>
    </custom>

    <body>
        <head>
            <link rel="author"
                href="https://plus.google.com/106980687849423472398/about"/>
        </head>

        <links>
            <item name="GitHub Page ↗"
                href="https://github.com/ksclarke/islandora_ezid" target="_new"/>
            <item name="Download Zip"
                href="https://github.com/ksclarke/islandora_ezid/archive/master.zip"
            />
        </links>

        <!-- top navbar -->
        <menu name="Read the Docs">
            <item name="Introduction" href="index.html"/>
            <item name="API Docs ↗" href="api/html/files.html" target="_new"/>
            <item name="Issues Queue ↗" target="_new"
                href="https://github.com/ksclarke/islandora_ezid/issues"/>
            <item name="License" href="license.html"/>
        </menu>

        <!-- bottom navbar -->
        <menu name="Project Links">
            <item name="Home Page" href="index.html#"/>
            <item name="Contact Info" href="team-list.html"/>
            <item name="Brief Summary" href="project-summary.html"/>
        </menu>
        <menu name="Contributions">
            <item name="Test Drive the Project" href="testers-welcome.html"/>
            <item name="Help Improve the Docs" href="documenters-welcome.html"/>
            <item name="Translators Welcome" href="translaters-welcome.html"/>
            <item name="Submit a Pull Request" href="coders-welcome.html"/>
        </menu>
        <menu name="Donations">
            <item name="Buy Me a Beer ↗" href="${paypal.button}" target="_new"/>
        </menu>
        <menu name="Developer Reports">
            <item name="Checkstyle Report" href="checkstyle.html"/>
            <item name="Change Log" href="changelog.html"/>
            <item name="Tag List" href="taglist.html"/>
        </menu>
        <menu name="Build Status">
            <item
                img="https://travis-ci.org/ksclarke/islandora_ezid.png?branch=master"
                name="(master) ↗"
                href="https://travis-ci.org/ksclarke/islandora_ezid"/>
            <item
                img="https://travis-ci.org/ksclarke/islandora_ezid.png?branch=develop"
                name="(develop) ↗"
                href="https://travis-ci.org/ksclarke/islandora_ezid"/>
        </menu>
        <menu name="Maven Docs" ref="reports"/>
        <menu name="Maven Theme">
            <item name="Maven Reflow Skin" target="_new"
                href="http://andriusvelykis.github.io/reflow-maven-skin/"/>
        </menu>
        <menu name="Site Copyright">
